<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Winui3aot.Pages.Launch.ConfigurePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ic="using:FluentIcons.WinUI"
    xmlns:local="using:Winui3aot.Pages.Launch"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <ScrollViewer>
            <StackPanel Spacing="16">
                <controls:SettingsCard Header="保存目录" HeaderIcon="{ic:SymbolIcon Symbol=Folder}">
                    <Button Click="SelectStoragePathAsync" Content="选择文件夹"/>
                </controls:SettingsCard>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
